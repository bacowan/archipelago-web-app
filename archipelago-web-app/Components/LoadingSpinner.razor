@if (Visible)
{
    <div class="spinner-container d-flex justify-content-center align-items-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool Visible { get; set; } = false;
}
